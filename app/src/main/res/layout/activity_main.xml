<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.commandpattern.MainActivity">
    <com.example.commandpattern.DrawCanvas
        android:id="@+id/draw_canvas"
        android:layout_width="match_parent"
        android:layout_height="150dp"/>


    <Button
        android:id="@+id/red_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="red_btn"/>

    <Button
        android:id="@+id/green_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="green_btn"/>
    <Button
        android:id="@+id/blue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="blue_btn"/>
    <Button
        android:id="@+id/undo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="undo_btn"/>
    <Button
        android:id="@+id/redo_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="redo_btn"/>
    <Button
        android:id="@+id/circle_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="circle_btn"/>
    <Button
        android:id="@+id/normal_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="normal_btn"/>
</LinearLayout>
